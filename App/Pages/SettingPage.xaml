<Page x:Class="Xunkong.Desktop.Pages.SettingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:ani="using:CommunityToolkit.WinUI.UI.Animations"
      xmlns:behavior="using:CommunityToolkit.WinUI.UI.Behaviors"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:interaction="using:Microsoft.Xaml.Interactions.Core"
      xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
      xmlns:local="using:Xunkong.Desktop.Pages"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:ui="using:CommunityToolkit.WinUI.UI"
      xmlns:xdc="using:Xunkong.Desktop.Controls"
      xmlns:xdm="using:Xunkong.Desktop.Models"
      x:DefaultBindMode="OneWay"
      mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition MaxWidth="1200" />
            <ColumnDefinition />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>


        <ScrollViewer Grid.Row="1"
                      Grid.ColumnSpan="2"
                      Padding="24,0,24,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition MaxWidth="1200" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel Margin="0,24,0,24" Spacing="4">


                    <!--  介绍与好评  -->
                    <Grid Height="120" ColumnSpacing="16">
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Border Grid.RowSpan="2"
                                Height="120"
                                HorizontalAlignment="Left"
                                ui:UIElementExtensions.ClipToBounds="True"
                                CornerRadius="8">
                            <Image x:Name="_Image_RecommendWallpaper"
                                   Width="220"
                                   Height="120"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Top"
                                   ui:VisualExtensions.NormalizedCenterPoint="0.5"
                                   Source="ms-appx:///Assets/Images/102203689_p0_thumb.jpg"
                                   Stretch="UniformToFill"
                                   Tapped="_Image_RecommendWallpaper_Tapped">
                                <ani:Explicit.Animations>
                                    <ani:AnimationSet x:Name="PointerEnteredAnimation">
                                        <ani:ScaleAnimation EasingMode="EaseOut"
                                                            EasingType="Circle"
                                                            To="1.1"
                                                            Duration="0:0:1.5" />
                                    </ani:AnimationSet>
                                    <ani:AnimationSet x:Name="PointerExitedAnimation">
                                        <ani:ScaleAnimation EasingMode="EaseOut"
                                                            EasingType="Circle"
                                                            To="1"
                                                            Duration="0:0:0.6" />
                                    </ani:AnimationSet>
                                </ani:Explicit.Animations>
                            </Image>
                            <interactivity:Interaction.Behaviors>
                                <interaction:EventTriggerBehavior EventName="PointerEntered">
                                    <behavior:StartAnimationAction Animation="{x:Bind PointerEnteredAnimation}" />
                                </interaction:EventTriggerBehavior>
                                <interaction:EventTriggerBehavior EventName="PointerExited">
                                    <behavior:StartAnimationAction Animation="{x:Bind PointerExitedAnimation}" />
                                </interaction:EventTriggerBehavior>
                            </interactivity:Interaction.Behaviors>
                        </Border>
                        <TextBlock Grid.Column="1"
                                   Margin="0,4,0,0"
                                   TextWrapping="Wrap">
                            <Run Text="记录旅途中发生的事，觉得好用就给个" />
                            <Hyperlink Click="Hyperlink_Click" UnderlineStyle="None">好评</Hyperlink>
                            <Run Text="或" />
                            <Hyperlink NavigateUri="https://github.com/xunkong/xunkong" UnderlineStyle="None">Star</Hyperlink>
                            <Run Text="吧。" />
                        </TextBlock>
                        <TextBlock Grid.Column="1"
                                   Margin="0,32,0,0"
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                   TextWrapping="Wrap">
                            <Run FontSize="12" Text="アナ - 原神2周年記念" />
                            <LineBreak />
                            <Run FontSize="12" Text="おめでとうございます！これからも旅人と共に、星と深淵を目指せ！" />
                        </TextBlock>
                        <StackPanel Grid.Row="1"
                                    Grid.Column="1"
                                    Orientation="Horizontal"
                                    Spacing="8">
                            <TextBlock Margin="0,0,4,0"
                                       VerticalAlignment="Center"
                                       Text="相关链接" />
                            <HyperlinkButton Name="HyperlinkButton_UpdateContent"
                                             Click="HyperlinkButton_UpdateContent_Click"
                                             Content="更新记录" />
                            <HyperlinkButton Content="反馈和建议" NavigateUri="https://github.com/xunkong/xunkong/issues/new/choose" />
                            <HyperlinkButton Content="隐私策略" NavigateUri="https://github.com/xunkong/xunkong/blob/main/privacy-policy.md" />
                            <HyperlinkButton Content="赞助开发者" NavigateUri="https://xunkong.cc/donate/" />
                        </StackPanel>
                    </Grid>


                    <!--  版本与外观  -->
                    <TextBlock Margin="0,20,0,4"
                               FontSize="20"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                               Text="版本与外观" />


                    <!--  检查更新  -->
                    <Expander Name="_Expander_AppVersion"
                              HorizontalAlignment="Stretch"
                              HorizontalContentAlignment="Stretch">
                        <Expander.Header>
                            <Grid>
                                <StackPanel Padding="4,16,0,16" Orientation="Horizontal">
                                    <Image Width="28"
                                           Height="28"
                                           Margin="-4"
                                           Source="ms-appx:///Assets/Logos/StoreLogo.png">
                                        <ToolTipService.ToolTip>
                                            <Image Source="ms-appx:///Assets/Logos/logo.png" />
                                        </ToolTipService.ToolTip>
                                    </Image>
                                    <TextBlock Margin="20,0,0,0">
                                        <Run Text="{x:Bind AppName}" />
                                        <LineBreak />
                                        <Run FontSize="12"
                                             Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                             Text="{x:Bind AppVersion}" />
                                    </TextBlock>
                                </StackPanel>
                                <Button HorizontalAlignment="Right"
                                        Command="{x:Bind CheckUpdateCommand, Mode=OneTime}"
                                        Content="检查更新" />
                            </Grid>
                        </Expander.Header>
                        <Expander.Content>
                            <StackPanel Margin="0,-16,44,-16">
                                <Grid Padding="44,12,0,12">
                                    <TextBlock>
                                        <Run Text="预览版更新提醒" />
                                        <LineBreak />
                                        <Run FontSize="12"
                                             Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                             Text="预览版包含正在测试的功能，通过 GitHub 分发" />
                                    </TextBlock>
                                    <ToggleSwitch HorizontalAlignment="Right"
                                                  IsEnabled="{x:Bind CanEditPrerelease}"
                                                  IsOn="{x:Bind EnablePrerelease, Mode=TwoWay}"
                                                  Style="{ThemeResource RightAlignToggleSwitchStyle}" />
                                </Grid>
                            </StackPanel>
                        </Expander.Content>
                    </Expander>


                    <!--  应用主题  -->
                    <xdc:SettingCard>
                        <xdc:SettingCard.Icon>
                            <FontIcon x:Name="FontIcon_Theme"
                                      FontSize="20"
                                      Glyph="&#xE793;" />
                        </xdc:SettingCard.Icon>
                        <xdc:SettingCard.Content>
                            <TextBlock VerticalAlignment="Center">
                                <Run Text="应用主题" />
                                <LineBreak />
                                <Run FontSize="12"
                                     Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                     Text="跟随系统选项在应用重启后生效" />
                            </TextBlock>
                        </xdc:SettingCard.Content>
                        <xdc:SettingCard.Selector>
                            <ComboBox SelectedIndex="{x:Bind SelectedThemeIndex, Mode=TwoWay}">
                                <ComboBoxItem Content="跟随系统" />
                                <ComboBoxItem Content="浅色模式" />
                                <ComboBoxItem Content="深色模式" />
                            </ComboBox>
                        </xdc:SettingCard.Selector>
                    </xdc:SettingCard>


                    <!--  窗口背景材质  -->
                    <Expander Name="_Expander_WindowBackdrop"
                              HorizontalAlignment="Stretch"
                              HorizontalContentAlignment="Stretch">
                        <Expander.Header>
                            <Grid>
                                <StackPanel Padding="4,16,0,16" Orientation="Horizontal">
                                    <FontIcon FontSize="20" Glyph="&#xE7F8;" />
                                    <TextBlock Margin="20,0,0,0">
                                        <Run Text="窗口背景材质" />
                                        <LineBreak />
                                        <Run FontSize="12"
                                             Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                             Text="应该能在 Windows 10 上用了吧" />
                                    </TextBlock>
                                </StackPanel>
                                <ComboBox MinWidth="104"
                                          HorizontalAlignment="Right"
                                          VerticalAlignment="Center"
                                          SelectedIndex="{x:Bind WindowBackdropIndex, Mode=TwoWay}">
                                    <ComboBoxItem Content="None" />
                                    <ComboBoxItem Content="Mica" />
                                    <ComboBoxItem Content="Acrylic" />
                                    <ComboBoxItem Content="Mica Alt" />
                                </ComboBox>
                            </Grid>
                        </Expander.Header>
                        <Expander.Content>
                            <StackPanel Margin="0,-16,44,-16">
                                <Grid Padding="44,12,0,12">
                                    <TextBlock>
                                        <Run Text="始终激活背景" />
                                        <LineBreak />
                                        <Run FontSize="12"
                                             Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                             Text="窗口失去焦点时不会回退为纯色" />
                                    </TextBlock>
                                    <ToggleSwitch HorizontalAlignment="Right"
                                                  IsOn="{x:Bind AlwaysActiveBackdrop, Mode=TwoWay}"
                                                  Style="{ThemeResource RightAlignToggleSwitchStyle}" />
                                </Grid>
                            </StackPanel>
                        </Expander.Content>
                    </Expander>


                    <!--  主页壁纸  -->
                    <Expander Name="_Expander_HomePageWallpaper"
                              HorizontalAlignment="Stretch"
                              HorizontalContentAlignment="Stretch">
                        <Expander.Header>
                            <Grid>
                                <StackPanel Padding="4,16,0,16" Orientation="Horizontal">
                                    <FontIcon FontSize="20" Glyph="&#xE91B;" />
                                    <TextBlock Margin="20,0,0,0">
                                        <Run Text="主页壁纸" />
                                        <LineBreak />
                                        <Run FontSize="12"
                                             Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                             Text="精心挑选的同人*图" />
                                    </TextBlock>
                                </StackPanel>
                                <ToggleSwitch HorizontalAlignment="Right"
                                              IsOn="{x:Bind EnableHomePageWallpaper, Mode=TwoWay}"
                                              Style="{ThemeResource RightAlignToggleSwitchStyle}" />
                            </Grid>
                        </Expander.Header>
                        <Expander.Content>
                            <StackPanel Margin="0,-16,44,-16">
                                <Grid Padding="44,12,0,12">
                                    <TextBlock>
                                        <Run Text="使用按流量计费的网络时下载新图片" />
                                        <LineBreak />
                                        <Run FontSize="12"
                                             Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                             Text="默认不启用，不用再担心流量偷跑啦" />
                                    </TextBlock>
                                    <ToggleSwitch HorizontalAlignment="Right"
                                                  IsOn="{x:Bind DownloadWallpaperOnMeteredInternet, Mode=TwoWay}"
                                                  Style="{ThemeResource RightAlignToggleSwitchStyle}" />
                                </Grid>
                                <Grid Padding="44,12,0,12">
                                    <TextBlock>
                                        <Run Text="使用自定义图片" />
                                        <LineBreak />
                                        <Run FontSize="12"
                                             Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                             Text="把图片文件托到主页的图片区域即可" />
                                    </TextBlock>
                                    <ToggleSwitch HorizontalAlignment="Right"
                                                  IsOn="{x:Bind UseCustomWallpaper, Mode=TwoWay}"
                                                  Style="{ThemeResource RightAlignToggleSwitchStyle}" />
                                </Grid>
                                <Grid Padding="44,12,0,12">
                                    <TextBlock>
                                        <Run Text="保存位置" />
                                        <LineBreak />
                                        <Run FontSize="12"
                                             Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                             Text="{x:Bind WallpaperSaveFolder}" />
                                    </TextBlock>
                                    <Button HorizontalAlignment="Right"
                                            Command="{x:Bind ChangeWallpaperSaveFolderCommand, Mode=OneTime}"
                                            Content="修改路径" />
                                </Grid>
                            </StackPanel>
                        </Expander.Content>
                    </Expander>


                    <!--  功能  -->
                    <TextBlock Margin="0,20,0,4"
                               FontSize="20"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                               Text="功能" />


                    <!--  启动游戏  -->
                    <Expander Name="_Expander_StartGame"
                              HorizontalAlignment="Stretch"
                              HorizontalContentAlignment="Stretch">
                        <Expander.Header>
                            <Grid>
                                <StackPanel Padding="4,16,0,16" Orientation="Horizontal">
                                    <FontIcon FontSize="20" Glyph="&#xE768;" />
                                    <TextBlock Margin="20,0,0,0">
                                        <Run Text="启动游戏" />
                                        <LineBreak />
                                        <Run FontSize="12"
                                             Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                             Text="也可以在开始菜单的寻空图标上点击右键快速启动" />
                                    </TextBlock>
                                </StackPanel>
                                <Button HorizontalAlignment="Right"
                                        Command="{x:Bind StartGameCommand, Mode=OneTime}"
                                        Content="启动游戏" />
                            </Grid>
                        </Expander.Header>
                        <Expander.Content>
                            <StackPanel Margin="0,-16,44,-16">
                                <Grid Padding="44,12,0,12">
                                    <TextBlock TextWrapping="Wrap">
                                        <Run Text="默认启动程序" />
                                        <LineBreak />
                                        <Run FontSize="12"
                                             Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                             Text="点击启动游戏时打开哪个程序" />
                                    </TextBlock>
                                    <ComboBox Width="100"
                                              HorizontalAlignment="Right"
                                              SelectedIndex="{x:Bind GameServerIndex, Mode=TwoWay}">
                                        <ComboBoxItem Content="国服" />
                                        <ComboBoxItem Content="国际服" />
                                        <ComboBoxItem Content="云原神" />
                                    </ComboBox>
                                </Grid>
                                <Grid Padding="44,12,0,12">
                                    <TextBlock TextWrapping="Wrap">
                                        <Run Text="国服 YuanShen.exe 路径" />
                                        <LineBreak />
                                        <Run FontSize="12"
                                             Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                             Text="{x:Bind GameExePathCN}" />
                                    </TextBlock>
                                    <Button HorizontalAlignment="Right"
                                            Command="{x:Bind ChangeGameExePathCommand, Mode=OneTime}"
                                            CommandParameter="0"
                                            Content="选择文件" />
                                </Grid>
                                <Grid Padding="44,12,0,12">
                                    <TextBlock TextWrapping="Wrap">
                                        <Run Text="国际服 GenshinImpact.exe 路径" />
                                        <LineBreak />
                                        <Run FontSize="12"
                                             Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                             Text="{x:Bind GameExePathGlobal}" />
                                    </TextBlock>
                                    <Button HorizontalAlignment="Right"
                                            Command="{x:Bind ChangeGameExePathCommand, Mode=OneTime}"
                                            CommandParameter="1"
                                            Content="选择文件" />
                                </Grid>
                                <Grid Padding="44,12,0,12">
                                    <TextBlock TextWrapping="Wrap">
                                        <Run Text="云原神 Genshin Impact Cloud Game.exe 路径" />
                                        <LineBreak />
                                        <Run FontSize="12"
                                             Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                             Text="{x:Bind GameExePathCNCloud}" />
                                    </TextBlock>
                                    <Button HorizontalAlignment="Right"
                                            Command="{x:Bind ChangeGameExePathCommand, Mode=OneTime}"
                                            CommandParameter="2"
                                            Content="选择文件" />
                                </Grid>
                                <Grid Padding="44,12,0,12">
                                    <TextBlock>
                                        <Run Text="解锁帧数上限" />
                                        <LineBreak />
                                        <Run FontSize="12"
                                             Foreground="{ThemeResource SystemFillColorCautionBrush}"
                                             Text="此功能会修改游戏内存，有一定的风险，设定值超过60才会启用" />
                                    </TextBlock>
                                    <NumberBox MinWidth="100"
                                               HorizontalAlignment="Right"
                                               Minimum="60"
                                               SmallChange="10"
                                               SpinButtonPlacementMode="Compact"
                                               Value="{x:Bind UnlockedFPS, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                </Grid>
                                <Grid Padding="44,12,0,12">
                                    <TextBlock>
                                        <Run Text="窗口宽度" />
                                        <LineBreak />
                                        <Run FontSize="12"
                                             Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                             Text="为 0 时忽略此项设置" />
                                    </TextBlock>
                                    <NumberBox Width="100"
                                               HorizontalAlignment="Right"
                                               Minimum="0"
                                               Value="{x:Bind StartGameWindowWidth, Mode=TwoWay}" />
                                </Grid>
                                <Grid Padding="44,12,0,12">
                                    <TextBlock>
                                        <Run Text="窗口高度" />
                                        <LineBreak />
                                        <Run FontSize="12"
                                             Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                             Text="为 0 时忽略此项设置" />
                                    </TextBlock>
                                    <NumberBox Width="100"
                                               HorizontalAlignment="Right"
                                               Minimum="0"
                                               Value="{x:Bind StartGameWindowHeight, Mode=TwoWay}" />
                                </Grid>
                                <Grid Padding="44,12,0,12">
                                    <TextBlock>
                                        <Run Text="使用无边框窗口" />
                                        <LineBreak />
                                        <Run FontSize="12"
                                             Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                             Text="此设置项不涉及以全屏独占方式运行游戏" />
                                    </TextBlock>
                                    <ToggleSwitch HorizontalAlignment="Right"
                                                  IsOn="{x:Bind UsePopupWindow, Mode=TwoWay}"
                                                  Style="{ThemeResource RightAlignToggleSwitchStyle}" />
                                </Grid>
                                <Grid Padding="44,12,0,12">
                                    <TextBlock>
                                        <Run Text="检查参量质变仪和洞天宝钱" />
                                        <LineBreak />
                                        <Run FontSize="12"
                                             Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                             Text="启动游戏成功后，检查所有账号上述两项的状态" />
                                    </TextBlock>
                                    <ToggleSwitch HorizontalAlignment="Right"
                                                  IsOn="{x:Bind CheckTransformerAndHomeCoinWhenStartGame, Mode=TwoWay}"
                                                  Style="{ThemeResource RightAlignToggleSwitchStyle}" />
                                </Grid>
                            </StackPanel>
                        </Expander.Content>
                    </Expander>


                    <!--  米游社签到  -->
                    <Expander HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch">
                        <Expander.Header>
                            <Grid>
                                <StackPanel Padding="4,16,0,16" Orientation="Horizontal">
                                    <Path Width="20"
                                          Data="M901.784183 130.096944l-71.520459 0 0-91.948962c0-21.034552-17.113446-38.147998-38.147998-38.147998l-2.548388 0c-21.031241 0-38.141375 17.11179-38.141375 38.147998l0 91.948962-475.285176 0 0-91.948962c0-21.034552-17.11179-38.147998-38.147998-38.147998l-2.548388 0c-21.034552 0-38.147998 17.11179-38.147998 38.147998l0 91.948962-75.087209 0c-66.715116 0-120.991315 54.276199-120.991315 120.991315L1.217878 902.998766c0 66.720084 54.276199 121.001251 120.991315 121.001251l779.573334 0c66.720084 0 120.999595-54.281167 120.999595-121.001251l0-651.908851C1022.780466 184.374799 968.499299 130.096944 901.784183 130.096944zM946.487782 944.986733l-867.617748 0L78.870034 404.68371l867.617748 0L946.487782 944.986733zM946.487782 324.319235l-867.617748 0 0-117.927951 867.617748 0L946.487782 324.319235zM408.749706 873.666635c6.794046 6.794046 15.696018 10.188585 24.597991 10.188585 6.029033 0 12.041507-1.596261 17.414814-4.710958 3.086547-1.602885 5.98598-3.690941 8.575765-6.280726L811.395053 520.810071c13.584781-13.586437 13.584781-35.612857 0-49.197637-13.586437-13.584781-35.612857-13.584781-49.199293 0L433.644098 800.165752 267.310017 633.830015c-13.586437-13.584781-35.611201-13.584781-49.197637 0-13.584781 13.586437-13.584781 35.611201 0 49.197637L408.749706 873.666635z"
                                          Fill="{ThemeResource TextFillColorPrimaryBrush}"
                                          Stretch="Uniform" />
                                    <TextBlock Margin="20,0,0,0">
                                        <Run Text="米游社签到" />
                                        <LineBreak />
                                        <Run FontSize="12"
                                             Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                             Text="因为米游社的风控限制，签到功能不再维护" />
                                    </TextBlock>
                                </StackPanel>
                            </Grid>
                        </Expander.Header>
                        <Expander.Content>
                            <StackPanel Margin="0,-16,44,-16">
                                <Grid Padding="44,12,0,12">
                                    <TextBlock TextWrapping="Wrap">
                                        <Run Text="应用启动时自动签到" />
                                        <LineBreak />
                                        <Run FontSize="12"
                                             Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                             Text="签到成功时不会有提示" />
                                    </TextBlock>
                                    <ToggleSwitch HorizontalAlignment="Right"
                                                  IsOn="{x:Bind SignInAllAccountsWhenStartUpApplication, Mode=TwoWay}"
                                                  Style="{ThemeResource RightAlignToggleSwitchStyle}" />
                                </Grid>
                                <Grid Padding="44,12,0,12">
                                    <TextBlock>
                                        <Run Text="后台定时签到" />
                                        <LineBreak />
                                        <Run FontSize="12"
                                             Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                             Text="每日 06:00 ~ 06:15 随机运行，若超出该时间则立刻运行" />
                                    </TextBlock>
                                    <ToggleSwitch HorizontalAlignment="Right"
                                                  IsOn="{x:Bind IsRegisterCheckInScheduler, Mode=TwoWay}"
                                                  Style="{ThemeResource RightAlignToggleSwitchStyle}" />
                                </Grid>
                            </StackPanel>
                        </Expander.Content>
                    </Expander>


                    <!--  主页功能  -->
                    <Expander HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch">
                        <Expander.Header>
                            <Grid>
                                <StackPanel Padding="4,16,0,16" Orientation="Horizontal">
                                    <FontIcon Glyph="&#xE10F;" />
                                    <TextBlock Margin="20,0,0,0">
                                        <Run Text="主页功能" />
                                        <LineBreak />
                                        <Run FontSize="12"
                                             Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                             Text="主页内的相关设置在这里" />
                                    </TextBlock>
                                </StackPanel>
                            </Grid>
                        </Expander.Header>
                        <Expander.Content>
                            <StackPanel Margin="0,-16,44,-16">
                                <!--  实时便笺  -->
                                <Grid Padding="44,12,0,12">
                                    <TextBlock TextWrapping="Wrap">
                                        <Run Text="实时便笺" />
                                        <LineBreak />
                                        <Run FontSize="12"
                                             Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                             Text="同时对所有账号生效" />
                                    </TextBlock>
                                    <ToggleSwitch HorizontalAlignment="Right"
                                                  IsOn="{x:Bind DisableDailyNotesInHomePage, Mode=TwoWay}"
                                                  Style="{ThemeResource RightAlignToggleSwitchStyle}" />
                                </Grid>
                                <!--  实时便笺缓存时间  -->
                                <Grid Padding="44,12,0,12">
                                    <TextBlock>
                                        <Run Text="实时便笺缓存时间" />
                                        <LineBreak />
                                        <Run FontSize="12"
                                             Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                             Text="减少网络请求次数，尽量避免验证账号" />
                                    </TextBlock>
                                    <NumberBox Width="100"
                                               HorizontalAlignment="Right"
                                               SmallChange="1"
                                               SpinButtonPlacementMode="Compact"
                                               Value="{x:Bind DailyNoteCacheMinutes, Mode=TwoWay}" />
                                </Grid>
                                <!--  留影叙佳期  -->
                                <Grid Padding="44,12,0,12">
                                    <TextBlock>
                                        <Run Text="留影叙佳期" />
                                        <LineBreak />
                                        <Run FontSize="12"
                                             Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                             Text="测试阶段默认关闭" />
                                    </TextBlock>
                                    <ToggleSwitch HorizontalAlignment="Right"
                                                  IsOn="{x:Bind EnableBirthdayStarInHomePage, Mode=TwoWay}"
                                                  Style="{ThemeResource RightAlignToggleSwitchStyle}" />
                                </Grid>
                                <!--  即将结束的活动  -->
                                <Grid Padding="44,12,0,12">
                                    <TextBlock>
                                        <Run Text="即将结束的活动" />
                                        <LineBreak />
                                        <Run FontSize="12"
                                             Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                             Text="3天之内将要结束的活动" />
                                    </TextBlock>
                                    <ToggleSwitch HorizontalAlignment="Right"
                                                  IsOn="{x:Bind EnableFinishingActivityInHomePage, Mode=TwoWay}"
                                                  Style="{ThemeResource RightAlignToggleSwitchStyle}" />
                                </Grid>
                            </StackPanel>
                        </Expander.Content>
                    </Expander>


                    <!--  网页快捷方式  -->
                    <Button Padding="0"
                            HorizontalAlignment="Stretch"
                            HorizontalContentAlignment="Stretch"
                            Command="{x:Bind NavigateToWebToolEditPageCommand, Mode=OneTime}">
                        <Grid Padding="20,16,18,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <StackPanel Orientation="Horizontal">
                                <SymbolIcon Symbol="Globe" />
                                <TextBlock Margin="20,0,0,0">
                                    <Run Text="网页快捷方式" />
                                    <LineBreak />
                                    <Run FontSize="12"
                                         Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                         Text="在左侧导航栏中添加网页快捷方式" />
                                </TextBlock>
                            </StackPanel>
                            <FontIcon Grid.Column="1"
                                      FontSize="12"
                                      Glyph="&#xE76C;" />
                        </Grid>
                    </Button>


                    <!--  自动刷新磁贴  -->
                    <Expander HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch">
                        <Expander.Header>
                            <Grid>
                                <StackPanel Padding="4,16,0,16" Orientation="Horizontal">
                                    <FontIcon FontSize="20" Glyph="&#xECA5;" />
                                    <TextBlock Margin="20,0,0,0">
                                        <Run Text="自动更新实时便笺磁贴内容" />
                                        <LineBreak />
                                        <Run FontSize="12"
                                             Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                             Text="关闭后可以通过点击磁贴手动更新" />
                                    </TextBlock>
                                </StackPanel>
                                <ToggleSwitch HorizontalAlignment="Right"
                                              IsOn="{x:Bind EnableDailyNoteTask, Mode=TwoWay}"
                                              Style="{ThemeResource RightAlignToggleSwitchStyle}" />
                            </Grid>
                        </Expander.Header>
                        <Expander.Content>
                            <StackPanel Margin="0,-16,44,-16">
                                <Grid Padding="44,12,0,12">
                                    <TextBlock TextWrapping="Wrap">
                                        <Run Text="磁贴更新时间间隔" />
                                        <LineBreak />
                                        <Run FontSize="12"
                                             Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                             Text="不得小于15分钟" />
                                    </TextBlock>
                                    <NumberBox Width="100"
                                               HorizontalAlignment="Right"
                                               Minimum="15"
                                               SmallChange="1"
                                               SpinButtonPlacementMode="Compact"
                                               Value="{x:Bind DailyNoteTaskTimeInterval, Mode=TwoWay}" />
                                </Grid>
                            </StackPanel>
                        </Expander.Content>
                    </Expander>


                    <!--  其他功能  -->
                    <Expander HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch">
                        <Expander.Header>
                            <Grid>
                                <StackPanel Padding="4,16,0,16" Orientation="Horizontal">
                                    <FontIcon Glyph="&#xE154;" />
                                    <TextBlock Margin="20,0,0,0">
                                        <Run Text="其他功能" />
                                        <LineBreak />
                                        <Run FontSize="12"
                                             Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                             Text="一些很少使用到的功能设置" />
                                    </TextBlock>
                                </StackPanel>
                            </Grid>
                        </Expander.Header>
                        <Expander.Content>
                            <StackPanel Margin="0,-16,44,-16">
                                <!--  显示新手祈愿统计  -->
                                <Grid Padding="44,12,0,12">
                                    <TextBlock TextWrapping="Wrap">
                                        <Run Text="显示新手祈愿统计" />
                                        <LineBreak />
                                        <Run FontSize="12"
                                             Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                             Text="满足一些欧皇的需求" />
                                    </TextBlock>
                                    <ToggleSwitch HorizontalAlignment="Right"
                                                  IsOn="{x:Bind ShowNoviceWishType, Mode=TwoWay}"
                                                  Style="{ThemeResource RightAlignToggleSwitchStyle}" />
                                </Grid>
                                <!--  使用旧版我的角色页面  -->
                                <Grid Padding="44,12,0,12">
                                    <TextBlock>
                                        <Run Text="使用旧版我的角色页面" />
                                        <LineBreak />
                                        <Run FontSize="12"
                                             Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                             Text="旧版我的角色页面不再维护" />
                                    </TextBlock>
                                    <ToggleSwitch HorizontalAlignment="Right"
                                                  IsOn="{x:Bind UseCharacterPageOldVersion, Mode=TwoWay}"
                                                  Style="{ThemeResource RightAlignToggleSwitchStyle}" />
                                </Grid>
                                <!--  隐藏未上线的角色  -->
                                <Grid Padding="44,12,0,12">
                                    <TextBlock>
                                        <Run Text="隐藏未上线的角色" />
                                        <LineBreak />
                                        <Run FontSize="12"
                                             Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                             Text="在角色图鉴中不显示未上线的角色" />
                                    </TextBlock>
                                    <ToggleSwitch HorizontalAlignment="Right"
                                                  IsOn="{x:Bind HideUnusableCharacter, Mode=TwoWay}"
                                                  Style="{ThemeResource RightAlignToggleSwitchStyle}" />
                                </Grid>
                                <!--  页面缓存  -->
                                <Grid Padding="44,12,0,12">
                                    <TextBlock>
                                        <Run Text="页面缓存" />
                                        <LineBreak />
                                        <Run FontSize="12"
                                             Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                             Text="开启后部分页面不再重复加载，但是应用占用的内存会增加" />
                                    </TextBlock>
                                    <ToggleSwitch HorizontalAlignment="Right"
                                                  IsOn="{x:Bind EnableNavigationCache, Mode=TwoWay}"
                                                  Style="{ThemeResource RightAlignToggleSwitchStyle}" />
                                </Grid>
                            </StackPanel>
                        </Expander.Content>
                    </Expander>



                    <!--  数据  -->
                    <TextBlock Margin="0,20,0,4"
                               FontSize="20"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                               Text="数据" />


                    <!--  使用 AppCenter 上传事件日志  -->
                    <xdc:SettingCard>
                        <xdc:SettingCard.Icon>
                            <FontIcon Glyph="&#xE3D7;" />
                        </xdc:SettingCard.Icon>
                        <xdc:SettingCard.Content>
                            <TextBlock>
                                <Run Text="上传事件日志" />
                                <LineBreak />
                                <Run FontSize="12"
                                     Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                     Text="上传的内容中不包含个人数据，且仅用于统计各功能的使用情况" />
                            </TextBlock>
                        </xdc:SettingCard.Content>
                        <xdc:SettingCard.Selector>
                            <ToggleSwitch HorizontalAlignment="Right"
                                          IsOn="{x:Bind AgreeTrackEventByAppCenter, Mode=TwoWay}"
                                          Style="{ThemeResource RightAlignToggleSwitchStyle}" />
                        </xdc:SettingCard.Selector>
                    </xdc:SettingCard>


                    <!--  数据文件夹  -->
                    <Expander HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch">
                        <Expander.Header>
                            <Grid>
                                <StackPanel Padding="4,16,0,16" Orientation="Horizontal">
                                    <FontIcon FontSize="20" Glyph="&#xE8B7;" />
                                    <TextBlock Margin="20,0,0,0">
                                        <Run Text="数据文件夹" />
                                        <LineBreak />
                                        <Run FontSize="12"
                                             Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                             Text="请妥善保管好您的个人数据" />
                                    </TextBlock>
                                </StackPanel>
                                <Button HorizontalAlignment="Right"
                                        Command="{x:Bind ClearCacheCommand, Mode=OneTime}"
                                        CommandParameter="ClearAll"
                                        Content="全部清除" />
                            </Grid>
                        </Expander.Header>
                        <Expander.Content>
                            <StackPanel Margin="0,-16,44,-16">
                                <!--  用户数据文件夹  -->
                                <Grid Padding="44,12,0,12">
                                    <TextBlock TextWrapping="Wrap">
                                        <Run Text="用户数据文件夹" />
                                        <LineBreak />
                                        <Run FontSize="12"
                                             Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                             Text="{x:Bind UserDataPath}" />
                                    </TextBlock>
                                    <Button HorizontalAlignment="Right"
                                            Command="{x:Bind OpenUserDataPathCommand, Mode=OneTime}"
                                            Content="打开文件夹" />
                                </Grid>
                                <Grid Padding="44,12,0,12">
                                    <TextBlock TextWrapping="Wrap">
                                        <Run Text="截图备份文件夹" />
                                        <LineBreak />
                                        <Run FontSize="12"
                                             Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                             Text="{x:Bind GameScreenshotBackupFolder}" />
                                    </TextBlock>
                                    <Button HorizontalAlignment="Right"
                                            Command="{x:Bind ChangeScreenshotBackupFolderCommand, Mode=OneTime}"
                                            Content="选择文件夹" />
                                </Grid>
                            </StackPanel>
                        </Expander.Content>
                    </Expander>


                    <!--  文件缓存  -->
                    <Expander HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch">
                        <Expander.Header>
                            <Grid>
                                <StackPanel Padding="4,16,0,16" Orientation="Horizontal">
                                    <FontIcon FontSize="20" Glyph="&#xE81E;" />
                                    <TextBlock Margin="20,0,0,0">
                                        <Run Text="文件缓存" />
                                        <LineBreak />
                                        <Run FontSize="12"
                                             Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                             Text="{x:Bind TotalCacheSizeString}" />
                                    </TextBlock>
                                </StackPanel>
                                <Button HorizontalAlignment="Right"
                                        Command="{x:Bind ClearCacheCommand, Mode=OneTime}"
                                        CommandParameter="ClearAll"
                                        Content="全部清除" />
                            </Grid>
                        </Expander.Header>
                        <Expander.Content>
                            <StackPanel Margin="0,-16,44,-16">
                                <Grid Padding="44,12,0,12">
                                    <TextBlock TextWrapping="Wrap">
                                        <Run Text="图片缓存" />
                                        <LineBreak />
                                        <Run FontSize="12"
                                             Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                             Text="{x:Bind ImageCacheSizeString}" />
                                    </TextBlock>
                                    <Button HorizontalAlignment="Right"
                                            Command="{x:Bind ClearCacheCommand, Mode=OneTime}"
                                            CommandParameter="ClearImage"
                                            Content="清除缓存" />
                                </Grid>
                                <Grid Padding="44,12,0,12">
                                    <TextBlock TextWrapping="Wrap">
                                        <Run Text="语音缓存" />
                                        <LineBreak />
                                        <Run FontSize="12"
                                             Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                             Text="{x:Bind VoiceCacheSizeString}" />
                                    </TextBlock>
                                    <Button HorizontalAlignment="Right"
                                            Command="{x:Bind ClearCacheCommand, Mode=OneTime}"
                                            CommandParameter="ClearVoice"
                                            Content="清除缓存" />
                                </Grid>
                            </StackPanel>
                        </Expander.Content>
                    </Expander>


                    <!--  预缓存图片  -->
                    <xdc:SettingCard>
                        <xdc:SettingCard.Icon>
                            <FontIcon Glyph="&#xE8B9;" />
                        </xdc:SettingCard.Icon>
                        <xdc:SettingCard.Content>
                            <TextBlock>
                                <Run Text="预缓存所有图片" />
                                <LineBreak />
                                <Run FontSize="12"
                                     Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                     Text="点击开始下载后会在屏幕右下角弹出进度通知" />
                            </TextBlock>
                        </xdc:SettingCard.Content>
                        <xdc:SettingCard.Selector>
                            <Button HorizontalAlignment="Right"
                                    Command="{x:Bind StartPreCacheAllImagesCommand, Mode=OneTime}"
                                    Content="开始下载" />
                        </xdc:SettingCard.Selector>
                    </xdc:SettingCard>


                    <!--  手动更新原神数据  -->
                    <xdc:SettingCard>
                        <xdc:SettingCard.Icon>
                            <FontIcon Glyph="&#xE895;" />
                        </xdc:SettingCard.Icon>
                        <xdc:SettingCard.Content>
                            <TextBlock>
                                <Run Text="手动更新本地原神数据" />
                                <LineBreak />
                                <Run FontSize="12"
                                     Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                     Text="{x:Bind UpdateGenshinDataText}" />
                            </TextBlock>
                        </xdc:SettingCard.Content>
                        <xdc:SettingCard.Selector>
                            <Button HorizontalAlignment="Right"
                                    Command="{x:Bind UpdateGenshinDataCommand, Mode=OneTime}"
                                    Content="手动更新" />
                        </xdc:SettingCard.Selector>
                    </xdc:SettingCard>





                </StackPanel>



            </Grid>


        </ScrollViewer>




    </Grid>
</Page>
